# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
FLASK_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=attendance_db
DB_USER=postgres
DB_PASSWORD=your-database-password

# Upload Configuration
UPLOAD_FOLDER=uploads/photos
MAX_CONTENT_LENGTH=16777216

# Face Recognition Configuration
FACE_CONFIDENCE_THRESHOLD=0.6

# Camera Configuration (for entrance monitoring)
# For webcam: use camera index (0, 1, 2, etc.)
CAMERA_SOURCE=0

# For IP camera: uncomment and set the URL
# IP_CAMERA_URL=rtsp://username:password@192.168.1.100:554/stream
# or for HTTP stream:
# IP_CAMERA_URL=http://192.168.1.100:8080/video

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Processing Settings
PROCESS_EVERY_N_FRAMES=5
RESIZE_SCALE=0.5

# Recognition Settings
COOLDOWN_MINUTES=5
CONFIDENCE_THRESHOLD=0.6

# Face Detection Model ('hog' for CPU, 'cnn' for GPU)
FACE_DETECTION_MODEL=hog
